      <!-- aqui empieza el contenido -->
      <div class="container">
        <div class="bg-light p-2">
          <div class="col-sm-8 py-5 mx-auto">
            <h1 class="display-5 fw-normal text-center">Registar Usuarios</h1>
            <hr />
            <div class="text-center" id="mensajeRucNoEncontrado"></div>
            <form id="myForm" action="" method="post">
              <div class="container d-flex flex-column gap-3 col-6">
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"
                    >Nombres</span
                  >
                  <input
                    type="text"
                    class="form-control"
                    name="nombres"
                    id="nombres"
                    aria-describedby="addon-wrapping"
                    disabled
                  />
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"
                    >Apellidos</span
                  >
                  <input
                    type="text"
                    class="form-control"
                    name="apellidos"
                    id="apellidos"
                    disabled
                    aria-describedby="addon-wrapping"
                  />
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping">Dni</span>
                  <input
                    type="number"
                    class="form-control"
                    id="dni"
                    name="dni"
                    aria-describedby="addon-wrapping"
                  />
                  <a  id="btndni" class="btn btn-outline-primary"><i class="fa-solid fa-magnifying-glass"></i></a>
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"
                    >Celular</span
                  >
                  <input
                    type="number"
                    class="form-control"
                    name="numcelular"
                    aria-describedby="addon-wrapping"
                  />
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"
                    >Direccion</span
                  >
                  <input
                    type="text"
                    class="form-control"
                    name="direccion"
                    aria-describedby="addon-wrapping"
                  />
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"
                    >Correo</span
                  >
                  <input
                    type="email"
                    class="form-control"
                    aria-describedby="addon-wrapping"
                    name="correo"
                  />
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"
                    >Contraseña</span
                  >
                  <input
                    type="password"
                    class="form-control"
                    aria-describedby="addon-wrapping"
                    name="contraseña1"
                  />
                </div>
                <!-- //make a combobox -->
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"
                    >Tipo de Usuario</span
                  >
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="codperfil"
                    id="codperfil"
                  >
                  <% if(typeof perfiles !=='undefined') {%> 
                    <% perfiles.forEach(function(perfil) { %>
                    <option value=<%= parseInt(perfil.codperfil) %>>
                      <%= perfil.nombre %>
                    </option>
                    <% }) %>
                    <% } %>
                  </select>
                </div>
                <button  id="btnEnviar" class="btn btn-primary">ENVIAR</button>

              </div>

            </form>
          </div>
        </div>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    
