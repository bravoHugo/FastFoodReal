<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/styletoggle.css" />
  </head>
  <body>
    <div class="container mt-5">
      <form action="/user/adminPanel/Dashboard" method="POST">
      <table class="table caption-top table-light table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Cargo</th>
            <th>Estado</th>
          </tr>
        </thead>
        <tbody>
          <% usuarios.forEach(function(usuario) { %>
          <tr>
            <td><%= usuario.codusuario %></td>
            <td><%= usuario.nombres %></td>
            <td><%= usuario.correo %></td>
            <td>
                <select name="cargo_<%= usuario.codusuario %>" id="cargo">
                  <option value=1 <% if(usuario.codperfil === 1) { %>selected<% } %>>Administrador</option>
                  <option value=2 <% if(usuario.codperfil === 2) { %>selected<% } %>>Cajero</option>
                  <option value=3 <% if(usuario.codperfil === 3) { %>selected<% } %>>Chef</option>
                  <option value=4 <% if(usuario.codperfil === 4) { %>selected<% } %>>Mozo</option>
                  <option value=5 <% if(usuario.codperfil === 5) { %>selected<% } %>>Cliente</option>
              </select>
            </td>
            <td>
            <select name="estado_<%= usuario.codusuario %>" id="cargo">
                <option value='1'<% if(usuario.estado === '1') { %>selected<% } %>>Activo</option>
                <option value='0'<% if(usuario.estado === '0') { %>selected<% } %>>Inactivo</option>
            </select>  
            </td>
          
          </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="container mt-5 d-flex justify-items-center flex-column align-items-center">
        <button type="submit" id="btnActualizar" name="btnActualizar" style="border: none;"><img src="/assets/images/guardar.png" alt=""></button>
        <p>GUARDAR</p>
        <a href="/user/logout">Logout</a>
        <a href="/user/adminPanel/register">Registrar</a>
        
        </div> 
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
   </div>
</body>
  
</html>
